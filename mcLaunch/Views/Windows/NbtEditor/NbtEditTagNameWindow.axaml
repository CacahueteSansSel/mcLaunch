<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Width="300" Height="110"
        x:Class="mcLaunch.Views.Windows.NbtEditor.NbtEditTagNameWindow"
        Title="Edit tag name"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundDarker}">
    <Window.Styles>
        <StyleInclude Source="/Styles/AppStyles.axaml" />
    </Window.Styles>
    <DockPanel Margin="10">
        <DockPanel DockPanel.Dock="Bottom">
            <Button DockPanel.Dock="Right" Classes="primary" Margin="10 0 0 0" Click="ConfirmButtonClicked">Confirm</Button>
            <Button DockPanel.Dock="Right" Classes="secondary" Click="CancelButtonClicked">Cancel</Button>
            <Panel />
        </DockPanel>
        <DockPanel Height="20">
            <Panel>
                <Image x:Name="IconTagByte" Source="{SvgImage /resources/nbt/byte.svg}" IsVisible="False"
                       Height="30" />
                <Image x:Name="IconTagByteArray" Source="{SvgImage /resources/nbt/byte_array.svg}" IsVisible="False"
                       Height="30" />
                <Image x:Name="IconTagCompound" Source="{SvgImage /resources/nbt/compound.svg}" IsVisible="False"
                       Height="30" />
                <Image x:Name="IconTagDouble" Source="{SvgImage /resources/nbt/double.svg}" IsVisible="False"
                       Height="30" />
                <Image x:Name="IconTagFloat" Source="{SvgImage /resources/nbt/float.svg}" IsVisible="False"
                       Height="30" />
                <Image x:Name="IconTagInt" Source="{SvgImage /resources/nbt/int.svg}" IsVisible="False"
                       Height="30" />
                <Image x:Name="IconTagIntArray" Source="{SvgImage /resources/nbt/int_array.svg}" IsVisible="False"
                       Height="30" />
                <Image x:Name="IconTagList" Source="{SvgImage /resources/nbt/list.svg}" IsVisible="False"
                       Height="30" />
                <Image x:Name="IconTagLong" Source="{SvgImage /resources/nbt/long.svg}" IsVisible="False"
                       Height="30" />
                <Image x:Name="IconTagLongArray" Source="{SvgImage /resources/nbt/long_array.svg}" IsVisible="False"
                       Height="30" />
                <Image x:Name="IconTagShort" Source="{SvgImage /resources/nbt/short.svg}" IsVisible="False"
                       Height="30" />
                <Image x:Name="IconTagString" Source="{SvgImage /resources/nbt/string.svg}" IsVisible="False"
                       Height="30" />
            </Panel>
            <TextBox x:Name="NameTextBox" Margin="10 0 0 0" />
        </DockPanel>
    </DockPanel>
</Window>